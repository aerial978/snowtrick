{% extends 'baseform.html.twig' %}

{% block title %}Login - Snowtricks{% endblock %}

{% block body %}
<body>
    <div class="main">
        <section class="sign">
            <h1 class="navbar-brand text-success text-center fs-1" href="#">Snowtricks</h1>
            <div class="container">
                <div class="sign-content">
                    <div class="row">
                        <div class="sign-form col-md-6">
                            <form method="POST">
                                <div class="form-group my-5">
                                    <label for="username">
                                        <i class="fa-solid fa-user"></i>
                                    </label>
                                    <input type="text" name="_username" id="username" value="" autocomplete="username" placeholder="Username" required>
                                </div>
                                <div class="form-group my-5">
                                    <label form="password">
                                        <i class="fa-solid fa-sm fa-lock"></i>
                                    </label>
                                    <input type="password" name="_password" id="password" value="" autocomplete="current-password" placeholder="Password" required>
                                </div>
                                <div class="form-group form-button">
                                    <button type="submit" class="btn bnt-lg btn-info">Login</button>
                                    <a class="back-button btn btn-lg btn-info border border-info bg-white text-info" role="button" href="">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

{% endblock %}
