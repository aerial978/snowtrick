{% extends 'baseform.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="main p-2">
        <section class="sign">
		<div class="navbar-brand text-center">
            <a href="{{ path('home.index') }}" class="fs-1 link-warning text-warning text-decoration-none">Snowtricks</a>
		</div>
			<div class="container bg-white shadow-lg p-3 mb-5 bg-body rounded">
				{% for message in app.flashes('warning') %}
					<div class="text-center alert alert-warning mt-4 fs-5">
						{{ message }}
					</div>
				{% endfor %}
				<div class="sign-content m-5">
					<div class="row">
						<div class="sign-image d-flex align-items-center justify-content-around flex-column col-md-6">
							<figure class="text-center"><img src="../images/snowboarder3.jpg" alt="sign image" class="img-fluid"></figure>
							<a href="{{ path('security.login') }}" class="link-warning text-center text-warning fs-4">Already an account ? Sign in</a>
						</div>
						<div class="sign-form col-md-6">
							<h2 class="form-title border-bottom border-dark text-dark fw-bold pb-3">Sign up</h2>
							{{ form_start(registrationForm) }}

							<div class="form-group my-3">
								{{ form_label(registrationForm.username) }}
								{{ form_widget(registrationForm.username) }}
								<div class="form-error text-danger">
									{{ form_errors(registrationForm.username) }}
								</div>	
							</div>
							<div class="form-group my-3">
								{{ form_label(registrationForm.email) }}
								{{ form_widget(registrationForm.email) }}
								{{ form_help(registrationForm.email) }}
								<div class="form-error text-danger">
									{{ form_errors(registrationForm.email) }}
								</div>
							</div>
							
							{{ form_widget(registrationForm.plainPassword) }}
							<div class="form-error text-danger">
								{{ form_errors(registrationForm.plainPassword) }}
							</div>
							
							<div class="form-group form-button d-flex justify-content-between pt-5">
								<button type="submit" class="btn btn-warning btn-lg">Submit</button>
								<a href="{{ path('home.index') }}" class="text-decoration-none"><button type="button" class="btn btn-lg btn-outline-warning">Back</button></a>
							</div>

							{{ form_end(registrationForm) }}
						</div>
						
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
