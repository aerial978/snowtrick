{% extends 'baseform.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="main">
        <section class="login">
            <h1 class="navbar-brand text-success text-center fs-1" href="#">Snowtricks</h1>
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
			<div class="container  bg-white shadow-lg p-3 mb-5 bg-body rounded">
				<div class="sign-content">
					<div class="row">
						<div class="sign-image col-md-6">
							<figure class="text-center"><img src="../images/snowboarder3.jpg" alt="sign image" class=""></figure>
						</div>
						<div class="sign-form col-md-6 pt-5">
							<h2 class="form-title text-info fw-bold pb-3">Sign up</h2>
							{{ form_start(registrationForm) }}

							<div class="form-group my-5">
								<i class="fa-solid fa-user mt-4"></i>
								{{ form_widget(registrationForm.username, {'attr':{'placeholder':'Username'} }) }}
								{{ form_errors(registrationForm.username) }}
							</div>

							<div class="form-group my-5">
								<i class="fa-solid fa-sm fa-envelope"></i>
								{{ form_widget(registrationForm.email, {'attr':{'placeholder':'Email Address'}}) }}
								{{ form_errors(registrationForm.email) }}
							</div>
							
							{{ form_row(registrationForm.plainPassword) }}

							<div class="form-group form-button">
								<button type="submit" class="btn bnt-lg btn-info text-light fs-5">Submit</button>
								<a class="back-button btn bnt-lg btn-info text-info fs-5 bg-white border border-info" role="button" href="{{ path('home.index') }}">Back</a>
							</div>

							{{ form_end(registrationForm) }}
						</div>
						
					</div>
				</div>
			</div>
		</section>
	</div>
</div>{% endblock %}
