<div class="media-responsive container">
	<div class="dropdown-center">
		<button class="btn btn-secondary dropdown-toggle w-100 bg-warning border border-none text-dark fs-4 fw-bold" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			See medias
		</button>
		<ul class="dropdown-menu bg-info mw-100">
			<li class="mx-2 bg-info fs-5 fw-bold">Pictures</li>
			{% for picture in trick.pictures %}
				{% if 'http' in picture.pictureLink %}
					<li class="gallery-item dropdown-item bg-warning" data-link="{{ picture.pictureLink }}" data-bs-toggle="modal" data-bs-target="#exampleModal">{{ picture.pictureLink }}</li>
				{% else %}
					<li class="gallery-item dropdown-item bg-warning" data-link="{{ asset('images/') }}{{ picture.pictureLink }}" data-bs-toggle="modal" data-bs-target="#exampleModal">{{ picture.pictureLink }}</li>
				{% endif %}
			{% endfor %}
			<li class="mx-2 bg-info fs-5 fw-bold">Videos</li>
			{% for picture in trick.videos %}
				<li class="video-item dropdown-item bg-warning" data-link="{{ picture.videoLink }}" data-bs-toggle="modal" data-bs-target="#videoModal">{{ picture.videoLink }}</li>
			{% endfor %}
		</li>
	</ul>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<input type="hidden" id="">
				<div class="mb-3">
					<div class="form-group"></div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" id="edit_button" class="btn btn-warning" data-bs-dismiss="modal">Submit</button>
			</div>
		</div>
	</div>
</div></div>
